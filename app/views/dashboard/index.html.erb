<div class="pagepad">
  <div id="breadcrumb">
    <ul>
      <li><a href="">Dashboard</a></li>
    </ul>
  </div>  
  
  <h1>Dashboard</h1>
  <div class="projectedit">
    <div class="left">
      <div id="tabs">
        <ul class="tabs">
          <li><%= link_to("People to Review", '#toreview') %></li>
          <li><%= link_to("Past Reviews", '#pastreview') %></li>
        </ul>
    
        <div class="tabcontent" id="toreview">
          <%- unless @team_reviewings.empty? %>
          <h2 class="border">My Team</h2>
          <%= render "reviewings_table", :reviewings => @team_reviewings %>
          <%- end -%>

          <%- unless @nonteam_reviewings.empty? %>
          <h2 class="border">Other</h2>
          <%= render "reviewings_table", :reviewings => @nonteam_reviewings %>
          <%- end -%>

          <%- if @nonteam_reviewings.empty? && @team_reviewings.empty? %>
            <div class="action_title">
              You have no people to review. 
              You might want to <%= link_to "start a review", new_review_url %> 
              or look at some of <%= link_to "your reviews", reviews_url %>.
            </div>
          <%- end -%>
        </div>
        
        <div class="tabcontent" id="pastreview">
          <%- unless @past_nonteam_reviewings.empty? %>
          <h2 class="border">Other</h2>
          <%= render "reviewings_table", :reviewings => @past_nonteam_reviewings %>
          <%- end -%>

          <%- unless @past_team_reviewings.empty? %>
          <h2 class="border">My Team</h2>
          <%= render "reviewings_table", :reviewings => @past_team_reviewings %>
          <%- end -%>

          <%- if @past_nonteam_reviewings.empty? && @past_team_reviewings.empty? %>
            <div class="action_title">
              You don't have any past reviews.
            </div>
          <%- end -%>
        </div>
      </div>
        
      
    </div>
    
    <div class="right sidebar">
      <div class="module">
        <h3><span>My Stuff</span></h3>
        <ul>
          <li><%= link_to('Personal Development Plan (PDP)', '') %></li>
          <li><%= link_to('Position Focus', '') %></li>
        </ul>
      </div>
      
      <div class="module">
        <h3>
          <span>MPD</span>
          <span class="controls"><a href="show/hide">Show / Hide</a></span>
        </h3>
        <table class="stafflist">
          <tbody id="_list">
            <tr>
              <td class="icon"><%= image_tag('icons/chart.png') %></td>
              <td class="name"><%= link_to('Monthly Goal') %></td>
              <td class="goal">$4000.00</td>
            </tr>
            <tr>
              <td class="icon"><%= image_tag('icons/chart.png') %></td>
              <td class="name"><%= link_to('Account Balance') %></td>
              <td class="goal">$500.26</td>
            </tr>
            <tr>
              <td class="icon"><%= image_tag('icons/chart.png') %></td>
              <td class="name"><%= link_to('Monthly Goal') %></td>
              <td class="goal">$8512.11</td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class="module">
        <h3>
          <span>Reminders</span>
          <span class="controls"><%= link_to('Add', '#', :class => 'add edit-leader', 'data-name' => "Add a reminder", 'data-id' => "1", 'data-leader' => "2") %></span>
        </h3>
        <table class="stafflist">
          <tbody id="_list">
            <tr>
              <td class="icon"><%= image_tag('icons/sticky-note-pin.png') %></td>
              <td class="name"><%= link_to('Create a review for David') %></td>
              <td class="date">12/20/2010</td>
              <td class="delete"><div class="buttons"><a href="" class="inline delete delete-leader"></a></div></td>           
            </tr>
          </tbody>
        </table>
      </div>
      
    </div>
    <div class="clear"></div>
  </div>
  
  
</div>
