<div id="controls">
  <% unless params[:view] == "print" %>
  <%= link_to "Print", print_url("&view=print"), :target => "_blank", :class => "print_button" %>
  <% end %>

  <div id="panel">
    <div class="panel">
      &nbsp;
    </div>
  </div>
</div>

<div id="preview" class="answer-page">
  <% @answer_sheets ||= [ @answer_sheet ] %>
  <% @answer_sheet_pages = @answer_sheets.collect(&:pages).flatten %>
  <% @answer_sheets.each do |answer_sheet| %>
    <% @elements = Qe::QuestionSet.new(answer_sheet.question_sheet.elements, answer_sheet).elements.group_by{ 
      |e| (@answer_sheet_pages & e.pages).first } %>
      <%= render :partial => 'qe/answer_sheets/answer_sheet', :locals => {:answer_sheet => @answer_sheet, :elements => @elements } %>  
  <% end %>
</div>
