<%= javascript_include_tag "people" %>
<div class="pagepad">
  <div id="breadcrumb">
    <ul>
      <li><a href=""><%= link_to("People", "") %></li>
      <li><a href=""><%= @person.full_name %></a></li>
    </ul>
  </div>  
  
  <h1>
    <%= @person.full_name %>
    <%- if admin? -%>
      <div id="adminflag">
        <%= check_box_tag "admin", 'true', @person.admin?, "data-url" => person_url(@person.id), "data-confirm" => ("Are you sure you want to remove yourself from being an admin?  This can not be reversed.  A current admin would have to make you an admin to reinstate you." if @person == current_person) %>
        <label for="admin">Admin Privileges</label>
      </div>
    <%- end -%>
  </h1>
  
  <div class="projectedit">
    <div class="left">

      <div id="reviewlist">
        <table class="people">
          <thead>
            <tr>
              <th class="gender"></th>
              <th class="name">Name</th>
              <th class="reviewname">Review Name</th>
              <th class="accdate">Due Date</th>
              <th class="status">Status</th>
            </tr>
          </thead>
          <tbody>
            <%- for review in @person.subjected_reviews -%>
            <tr>
              <td class="gender"></td>
              <td class="name"><%= review.subject.full_name %></td>
              <td class="reviewname"><%= review.name %></td>
              <td class="duedate"><%= l review.due %></td>
              <td class="status">0</td>
            </tr>
            <%- end -%>
          </tbody>
        </table>
      
      </div>
      
    </div>

    <%= render "people/sidebar", :person => @person %>

  </div>
  
</div>

