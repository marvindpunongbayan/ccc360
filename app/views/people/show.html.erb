<%= javascript_include_tag "people" %>
<div class="pagepad">
  <div id="breadcrumb">
    <ul>
      <li><a href=""><%= link_to("People", people_path) %></li>
      <li><a href=""><%= @person.full_name %></a></li>
    </ul>
  </div>  
  
  <h1>
    <%= @person.full_name %>
    <%- if admin? -%>
      <div id="adminflag">
        <%= check_box_tag "admin", 'true', @person.admin?, "data-url" => person_url(@person.id), "data-confirm" => ("Are you sure you want to remove yourself from being an admin?  This can not be reversed.  A current admin would have to make you an admin to reinstate you." if @person == current_person) %>
        <label for="admin">Super User Privileges</label>
      </div>
    <%- end -%>
  </h1>
  
  <div class="projectedit">
    <div class="left">

      <div id="reviewlist">
        <table class="people">
          <thead>
            <tr>
              <th class="gender"></th>
              <th class="name">Name</th>
              <th class="reviewname">Review Name</th>
              <th class="summary">Summary</th>
              <th class="accdate">Due Date</th>
              <th class="status">Status</th>
            </tr>
          </thead>
          <tbody>
            <%- for review in @person.subjected_reviews -%>
            <tr>
              <td class="gender"><%= gender_icon(review.subject) %></td>
              <td class="name"><%= person_link_if_authed(review.subject) %></td>
              <td class="reviewname"><%= is_leading_person?(review.subject) ? link_to(review.name, review_url(review.id)) : review.name %></td>
              <td class="reviewname">
                <%- if review.show_summary_form? && can_view_summary?(review.subject, review.summary_form) -%>
                  <%= link_to("Summary", review_summary_url(review.id)) %>
                <%- end -%>
              </td>
              <td class="duedate"><span class="<%= "alert" if review.late? %>"><%= I18n.l review.due %></span></td>
              <td class="status"><%= review.percent.to_i %>%</td>
            </tr>
            <%- end -%>
          </tbody>
        </table>
      
      </div>
      
    </div>

    <%= render "people/sidebar", :person => @person %>

  </div>
  
</div>

