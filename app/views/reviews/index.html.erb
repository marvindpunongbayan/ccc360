<div class="pagepad">
  <div id="breadcrumb">
    <ul>
      <li><a href="" class="last">My Reviews</a></li>
    </ul>
  </div>  
  
  <h1>My Reviews</h1>
  
  <div id="contextmenu">
    <ul class="left">
      <li><%= link_to('New Review', new_review_url, :class => 'edit withicon', :remote => true) %></li>
    </ul>
    <div class="clear"></div>
  </div>
  
  <div class="projectedit">
    <div class="left">
      <div id="tabs">
        <ul class="tabs">
          <li><%= link_to("Current Reviews", '#toreview') %></li>
          <li><%= link_to("Past Reviews", '#pastreview') %></li>
        </ul>
    
        <div class="tabcontent" id="toreview">
          <table class="people">
            <thead>
              <tr>
                <th class="expand"></th>
                <th class="gender"></th>
                <th class="name">Name</th>
                <th class="reviewname">Review Name</th>
                <th class="accdate">Due Date</th>
                <th class="status">Status</th>
              </tr>
            </thead>
            <tbody>
              <%- for review in @reviews -%>
              <tr class="review_<%=review.id%> review_title">
                <td class="expand">
                  <%= link_to image_tag("expand.png"), review_url(review), :remote => true, :class => "expand_button" %>
                  <%= link_to_function image_tag("expanded.png"), %|
                  $("tr.review_#{review.id}.reviewer_content").addClass("reviewer_content_hide");
                  $("tr.review_#{review.id} .collapse_button").hide();
                  $("tr.review_#{review.id} .expand_button").show();
                  |, :class => "collapse_button", :style => "display:none" %>
                </td>
                <td class="gender"><%= gender_icon(review.subject) %></td>
                <td class="name"><%= link_to(review.subject.full_name, '') %></td>
                <td class="reviewname"><%= link_to(review.name) %></td>
                <td class="duedate">12/12/2012</td>
                <td class="status">0%</td>
              </tr>
              <tr class="review_<%=review.id%> reviewer_content reviewer_content_hide">
                <td colspan="6">
                </td>
              </tr>
              <%- end -%>
          </table>
        </div>
        
        <div class="tabcontent" id="pastreview">
          <table class="people">
            <thead>
              <tr>
                <th class="gender"></th>
                <th class="name">Name</th>
                <th class="reviewname">Review Name</th>
                <th class="accdate">Due Date</th>
                <th class="status">Status</th>
              </tr>
            </thead>
            <tbody>
              <!-- TODO -->
            </tbody>
          </table>
        </div>
      </div>
    </div>
<div class="right sidebar">
      <div class="module">
        <h3><span>My Stuff</span></h3>
        <ul>
          <li><%= link_to('Personal Development Plan (PDP)', '') %></li>
          <li><%= link_to('Position Focus', '') %></li>
        </ul>
      </div>
      
      <div class="module">
        <h3>
          <span>MPD</span>
          <span class="controls"><a href="show/hide">Show / Hide</a></span>
        </h3>
        <table class="stafflist">
          <tbody id="_list">
            <tr>
              <td class="icon"><%= image_tag('icons/chart.png') %></td>
              <td class="name"><%= link_to('Monthly Goal') %></td>
              <td class="goal">$4000.00</td>
            </tr>
            <tr>
              <td class="icon"><%= image_tag('icons/chart.png') %></td>
              <td class="name"><%= link_to('Account Balance') %></td>
              <td class="goal">$500.26</td>
            </tr>
            <tr>
              <td class="icon"><%= image_tag('icons/chart.png') %></td>
              <td class="name"><%= link_to('Monthly Goal') %></td>
              <td class="goal">$8512.11</td>
            </tr>
          </tbody>
        </table>
      </div>
      
      <div class="module">
        <h3>
          <span>Reminders</span>
          <span class="controls"><%= link_to('Add', '#', :class => 'add edit-leader', 'data-name' => "Add a reminder", 'data-id' => "1", 'data-leader' => "2") %></span>
        </h3>
        <table class="stafflist">
          <tbody id="_list">
            <tr>
              <td class="icon"><%= image_tag('icons/sticky-note-pin.png') %></td>
              <td class="name"><%= link_to('Create a review for David') %></td>
              <td class="date">12/20/2010</td>
              <td class="delete"><div class="buttons"><a href="" class="inline delete delete-leader"></a></div></td>           
            </tr>
          </tbody>
        </table>
      </div>
      
    </div>
    <div class="clear"></div>

    <div class="clear"></div>
    <div id="new_reviewer_dialog" style="display:none" title="Add reviewers"><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span><span id="dialog-message">
        <div id="new_review_dialog" style="display:none" title="New Review"><span class="ui-icon ui-icon-alert" style="float:left; margin:0 7px 20px 0;"></span><span id="dialog-message">
    </span></div>
    <%- if @add_dialog -%>
    <script>
    $(document).ready(function() {
      <%= render :file => "reviews/show.js.rjs" %>
      <%= render :file => "reviewers/new.js.rjs" %>
      $("#new_reviewer_prompt").html("The review for <%=@review.subject.full_name%> has been created.  You can now add reviewers.  When finished, hit the Done button.");
    });
    </script>
    <%- end -%>
  </div>
</div>
